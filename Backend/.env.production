NAME=TamburinMusic API
PORT=5001

# MariaDB Database Configuration for Production
MARIADB_HOST=localhost
MARIADB_USERNAME=root
MARIADB_PASSWORD=YOUR_PRODUCTION_PASSWORD_HERE
MARIADB_PORT=3306
MARIADB_DATABASE=tamburinmusic

# JWT Secret Key (CHANGE THIS FOR PRODUCTION!)
JWT_SECRET_KEY=CHANGE_THIS_TO_STRONG_SECRET_KEY_MIN_32_CHARS_RANDOM

# Log Level
LOG_LEVEL=info

# Server Number
SERVER_NUM=1

# Aligo SMS Settings (Optional)
ALIGO_USER_ID=
ALIGO_SENDER=
ALIGO_API_KEY=
ALIGO_SENDER_KEY=
ALIGO_TEST_MODE=false

# Gmail Settings (Optional)
GMAIL_ID=
GMAIL_PASSWORD=
GMAIL_SENDER=

# AWS S3 Configuration
# NOTE: AWS credentials are stored in Backend/awsconfig.json (NOT in .env for security)
# Make sure awsconfig.json exists in production with:
# - accessKeyId
# - secretAccessKey
# - region
S3_BUCKET_NAME=tamburinstudio-storage
S3_REGION=us-east-2

NODE_ENV=production
